// src/components/ThemeToggle.astro
---

<!-- Modern Theme Toggle -->
<button 
  id="theme-toggle" 
  class="relative inline-flex h-8 w-14 items-center rounded-full bg-gradient-to-r from-blue-400 to-blue-500 dark:from-slate-700 dark:to-slate-600 transition-all duration-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-slate-400 shadow-lg hover:shadow-xl transform hover:scale-105 active:scale-95"
  aria-label="Cambiar tema"
  title="Cambiar entre modo claro y oscuro"
>
  <!-- Background Icons -->
  <div class="absolute inset-0 flex items-center justify-between px-2">
    <!-- Sun Icon Background -->
    <svg class="h-4 w-4 text-white/70 transition-all duration-500" fill="currentColor" viewBox="0 0 24 24">
      <path d="M12 2.25a.75.75 0 01.75.75v2.25a.75.75 0 01-1.5 0V3a.75.75 0 01.75-.75zM7.5 12a4.5 4.5 0 119 0 4.5 4.5 0 01-9 0zM18.894 6.166a.75.75 0 00-1.06-1.06l-1.591 1.59a.75.75 0 101.06 1.061l1.591-1.59zM21.75 12a.75.75 0 01-.75.75h-2.25a.75.75 0 010-1.5H21a.75.75 0 01.75.75zM17.834 18.894a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 10-1.061 1.06l1.59 1.591zM12 18a.75.75 0 01.75.75V21a.75.75 0 01-1.5 0v-2.25A.75.75 0 0112 18zM7.758 17.303a.75.75 0 00-1.061-1.06l-1.591 1.59a.75.75 0 001.06 1.061l1.591-1.59zM6 12a.75.75 0 01-.75.75H3a.75.75 0 010-1.5h2.25A.75.75 0 016 12zM6.697 7.757a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 00-1.061 1.06l1.59 1.591z"/>
    </svg>
    
    <!-- Moon Icon Background -->
    <svg class="h-4 w-4 text-white/70 transition-all duration-500" fill="currentColor" viewBox="0 0 24 24">
      <path fill-rule="evenodd" d="M9.528 1.718a.75.75 0 01.162.819A8.97 8.97 0 009 6a9 9 0 009 9 8.97 8.97 0 003.463-.69.75.75 0 01.981.98 10.503 10.503 0 01-9.694 6.46c-5.799 0-10.5-4.701-10.5-10.5 0-4.368 2.667-8.112 6.46-9.694a.75.75 0 01.818.162z" clip-rule="evenodd"/>
    </svg>
  </div>
  
  <!-- Toggle Circle -->
  <span 
    id="toggle-circle"
    class="relative inline-block h-6 w-6 transform rounded-full bg-white shadow-lg transition-all duration-500 ease-out translate-x-1 ring-0"
  >
    <!-- Active Icon Container -->
    <div class="absolute inset-0 flex items-center justify-center">
      <!-- Sun Icon (visible in light mode) -->
      <svg 
        id="sun-icon" 
        class="h-4 w-4 text-amber-500 opacity-100 transition-all duration-300 transform scale-100" 
        fill="currentColor" 
        viewBox="0 0 24 24"
      >
        <path d="M12 2.25a.75.75 0 01.75.75v2.25a.75.75 0 01-1.5 0V3a.75.75 0 01.75-.75zM7.5 12a4.5 4.5 0 119 0 4.5 4.5 0 01-9 0zM18.894 6.166a.75.75 0 00-1.06-1.06l-1.591 1.59a.75.75 0 101.06 1.061l1.591-1.59zM21.75 12a.75.75 0 01-.75.75h-2.25a.75.75 0 010-1.5H21a.75.75 0 01.75.75zM17.834 18.894a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 10-1.061 1.06l1.59 1.591zM12 18a.75.75 0 01.75.75V21a.75.75 0 01-1.5 0v-2.25A.75.75 0 0112 18zM7.758 17.303a.75.75 0 00-1.061-1.06l-1.591 1.59a.75.75 0 001.06 1.061l1.591-1.59zM6 12a.75.75 0 01-.75.75H3a.75.75 0 010-1.5h2.25A.75.75 0 016 12zM6.697 7.757a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 00-1.061 1.06l1.59 1.591z"/>
      </svg>
      
      <!-- Moon Icon (visible in dark mode) -->
      <svg 
        id="moon-icon" 
        class="h-4 w-4 text-slate-700 opacity-0 transition-all duration-300 transform scale-75 absolute" 
        fill="currentColor" 
        viewBox="0 0 24 24"
      >
        <path fill-rule="evenodd" d="M9.528 1.718a.75.75 0 01.162.819A8.97 8.97 0 009 6a9 9 0 009 9 8.97 8.97 0 003.463-.69.75.75 0 01.981.98 10.503 10.503 0 01-9.694 6.46c-5.799 0-10.5-4.701-10.5-10.5 0-4.368 2.667-8.112 6.46-9.694a.75.75 0 01.818.162z" clip-rule="evenodd"/>
      </svg>
    </div>
  </span>
</button>

<script is:inline>
  class ThemeManager {
    constructor() {
      this.themeToggle = null;
      this.toggleCircle = null;
      this.sunIcon = null;
      this.moonIcon = null;
      this.init();
    }

    init() {
      this.themeToggle = document.getElementById('theme-toggle');
      this.toggleCircle = document.getElementById('toggle-circle');
      this.sunIcon = document.getElementById('sun-icon');
      this.moonIcon = document.getElementById('moon-icon');
      
      const currentTheme = localStorage.getItem('theme') || 'light';
      
      if (currentTheme === 'dark') {
        document.documentElement.classList.add('dark');
        this.updateThemeUI(true);
      } else {
        this.updateThemeUI(false);
      }
      
      this.bindEvents();
    }

    bindEvents() {
      this.themeToggle?.addEventListener('click', () => {
        const isDark = document.documentElement.classList.toggle('dark');
        
        if (isDark) {
          localStorage.setItem('theme', 'dark');
          this.updateThemeUI(true);
        } else {
          localStorage.setItem('theme', 'light');
          this.updateThemeUI(false);
        }
      });
    }

    updateThemeUI(isDark) {
      if (!this.toggleCircle || !this.sunIcon || !this.moonIcon) return;

      if (isDark) {
        // Mover el círculo a la derecha y cambiar iconos
        this.toggleCircle.style.transform = 'translateX(2rem)';
        this.sunIcon.style.opacity = '0';
        this.sunIcon.style.transform = 'scale(0.75) rotate(180deg)';
        this.moonIcon.style.opacity = '1';
        this.moonIcon.style.transform = 'scale(1) rotate(0deg)';
      } else {
        // Mover el círculo a la izquierda y cambiar iconos
        this.toggleCircle.style.transform = 'translateX(0.25rem)';
        this.sunIcon.style.opacity = '1';
        this.sunIcon.style.transform = 'scale(1) rotate(0deg)';
        this.moonIcon.style.opacity = '0';
        this.moonIcon.style.transform = 'scale(0.75) rotate(-180deg)';
      }
    }
  }

  // Auto-inicializar
  new ThemeManager();
</script>

<style>
  #toggle-circle {
    transition: transform 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
  }
  
  #sun-icon, #moon-icon {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  #theme-toggle {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  /* Efectos hover mejorados */
  #theme-toggle:hover {
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15), 0 4px 10px rgba(0, 0, 0, 0.1);
  }
  
  /* Animación de pulso sutil */
  #theme-toggle:active #toggle-circle {
    transform: scale(0.95);
  }
  
  /* Gradiente animado en hover */
  #theme-toggle:hover {
    background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  }
  
  .dark #theme-toggle:hover {
    background: linear-gradient(135deg, #475569, #334155);
  }
</style>